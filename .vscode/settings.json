{

  /* Vertical guidelines for line wrapping. */
  "editor.rulers": [
    100,
  ],

  /* Wrap long code lines at the viewport or 100 characters, whichever is
  narrowest. Same for documentation. */
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "[asciidoc]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
  },
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
  },

  /* Handle indentation on a file-by-file basis - this is required due to the
  variety of languages used in this repository. */
  "editor.detectIndentation": true,
  // "editor.insertSpaces": true,
  // "editor.tabSize": 2,

  /* Show control and empty space characters. */
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",

  /* Disable all auto-formatting mechanisms. */
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.formatOnType": false,

  /* Disable auto-fixes. */
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
  },

  /* Don't allow commits to protected branches. */
  "git.branchProtectionPrompt": "alwaysPrompt",
  "git.branchProtection": [
    // "stable",
    // "release/*",
  ],

}
